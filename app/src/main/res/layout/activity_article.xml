<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSecondary"
    tools:context=".activity.ArticleActivity">

    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingHorizontal="9dp"
        android:background="@color/backgroundPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="7dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@drawable/btn_circle"
            android:backgroundTint="@color/backgroundPrimary"
            app:tint="@color/textSecondary"
            android:layout_marginEnd="10dp"/>

        <TextView
            style="@style/TextExtraLarge_SemiBold"
            android:id="@+id/title_navbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textPrimary"
            android:layout_marginEnd="16dp"
            android:text="Artikel"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="7dp"
                android:src="@drawable/ic_search"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/backgroundPrimary"
                app:tint="@color/textSecondary"
                android:layout_marginEnd="6dp"/>

            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="7dp"
                android:src="@drawable/ic_bookmark"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/backgroundPrimary"
                app:tint="@color/textSecondary"/>

        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filter_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/backgroundPrimary"
        app:layout_constraintTop_toBottomOf="@id/navbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <android.widget.Button
                android:id="@+id/btn_all"
                style="@style/TextSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/primary500"
                android:outlineProvider="none"
                android:paddingHorizontal="14dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:letterSpacing="0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Semua" />

            <android.widget.Button
                android:id="@+id/btn_most_popular"
                style="@style/TextSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/fillSecondary"
                android:outlineProvider="none"
                android:paddingHorizontal="14dp"
                android:textAllCaps="false"
                android:textColor="@color/textSecondary"
                android:letterSpacing="0"
                android:layout_marginEnd="8dp"
                android:text="Paling Populer" />

            <android.widget.Button
                android:id="@+id/btn_newest"
                style="@style/TextSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/fillSecondary"
                android:outlineProvider="none"
                android:paddingHorizontal="14dp"
                android:textAllCaps="false"
                android:textColor="@color/textSecondary"
                android:letterSpacing="0"
                android:layout_marginEnd="8dp"
                android:text="Terbaru" />

            <android.widget.Button
                android:id="@+id/btn_unread"
                style="@style/TextSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/fillSecondary"
                android:outlineProvider="none"
                android:paddingHorizontal="14dp"
                android:textAllCaps="false"
                android:textColor="@color/textSecondary"
                android:letterSpacing="0"
                android:layout_marginEnd="16dp"
                android:text="Belum Dibaca" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapter_trash_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/filter_article"
        tools:listitem="@layout/adapter_article"/>

</androidx.constraintlayout.widget.ConstraintLayout>