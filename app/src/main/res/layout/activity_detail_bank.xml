<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@color/backgroundSecondary"
    tools:context=".activity.DetailBankActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bankPhotoUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/img_placeholder_square" />

            <TextView
                android:id="@+id/bankName"
                style="@style/Heading6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BS000 Trashscan"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"/>

            <TextView
                android:id="@+id/bankLocation"
                style="@style/TextBase_Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:layout_marginHorizontal="16dp"
                android:lineHeight="20dp"
                android:text="Lokasi bank sampah"
                tools:text="Jalan Sunset Boulevard, Kota Makassar, Sulawesi Selatan 90224" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    
                    <ImageView
                        android:id="@+id/icVehicle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_vehicle_filled"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/primary500"/>


                    <TextView
                        android:id="@+id/vehicleTitle"
                        style="@style/TextExtraSmall_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jarak"
                        android:textColor="@color/textSecondary"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icVehicle" />

                    <TextView
                        android:id="@+id/bankDistance"
                        style="@style/TextBase_SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 KM"
                        android:textColor="@color/textPrimary"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/vehicleTitle"
                        app:layout_constraintStart_toEndOf="@+id/icVehicle"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_no_stroke_container"
                    android:backgroundTint="@color/fillPrimary"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/icRecycle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_recycle_filled"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/secondary500"/>


                    <TextView
                        android:id="@+id/exchangeTitle"
                        style="@style/TextExtraSmall_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penukaran"
                        android:textColor="@color/textSecondary"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icRecycle" />

                    <TextView
                        android:id="@+id/bankExchange"
                        style="@style/TextBase_SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Penukaran"
                        android:textColor="@color/textPrimary"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/exchangeTitle"
                        app:layout_constraintStart_toEndOf="@+id/icRecycle"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:paddingStart="9dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        tools:layout_marginTop="0dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="7dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@drawable/btn_circle"
            android:backgroundTint="@color/white"
            app:tint="@color/textSecondary"
            android:layout_marginEnd="10dp"/>

        <TextView
            style="@style/TextExtraLarge_SemiBold"
            android:id="@+id/title_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            tools:text="Detail Bank Sampah"/>

    </LinearLayout>

    <!-- Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.widget.Button
            android:id="@+id/btn_route"
            style="@style/TextBase_Bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_primary"
            android:outlineProvider="none"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:text="Rute"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linear_layout" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextExtraSmall_Regular"
                android:text="Anda akan dialihkan ke "
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextExtraSmall_SemiBold"
                android:text="Google Maps"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary500" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
