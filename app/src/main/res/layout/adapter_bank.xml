<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/btn_trash_bank">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/bankPhotoUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_placeholder_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/bankName"
            style="@style/TextBase_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bankPhotoUrl"
            tools:text="BS42 Mangga Tiga" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/bankName">

            <TextView
                android:id="@+id/bankDistance"
                style="@style/TextExtraSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.16 KM"
                android:textColor="@color/textSecondary"/>

            <View
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="@color/textTertiary"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/bankDistanceTime"
                style="@style/TextExtraSmall_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Menit"
                android:textColor="@color/textSecondary"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
