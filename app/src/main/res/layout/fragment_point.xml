<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PointFragment">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_point_container"
        android:backgroundTint="@color/backgroundPrimary"
        android:paddingStart="16dp"
        android:paddingEnd="9dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        tools:layout_marginTop="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_locate_circle"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/search_trash_bank"
            style="@style/TextBase_Regular"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Cari titik sampah disini..."
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textTertiary"
            android:textColorHighlight="@color/secondary200"
            android:textCursorDrawable="@drawable/caret_color_secondary"
            android:background="@null"
            android:padding="0dp"/>

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="7dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/btn_circle"
            android:backgroundTint="@color/backgroundPrimary"
            app:tint="@color/textTertiary"/>

    </LinearLayout>

    <!-- Detail -->
    <LinearLayout
        android:id="@+id/container_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/bg_rounded_no_stroke_container"
        android:backgroundTint="@color/backgroundPrimary"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:layout_marginBottom="16dp"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/pointName"
            style="@style/TextBase_Bold"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Titik Sampah ..."
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/pointAddress"
            style="@style/TextExtraSmall_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:lineHeight="18dp"
            android:text="Lokasi titik sampah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/bgStatusIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_container_status"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_battery_empty"
                    app:tint="@color/primary500"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextExtraSmall_Bold"
                    android:textSize="10dp"
                    android:text="Status"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_container"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_foot"
                    app:tint="@color/textSecondary"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextExtraSmall_Bold"
                    android:textSize="10dp"
                    android:text="Rute"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_container"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_flag"
                    app:tint="@color/textSecondary"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextExtraSmall_Bold"
                    android:textSize="10dp"
                    android:text="Lapor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_container"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/textSecondary"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextExtraSmall_Bold"
                    android:textSize="10dp"
                    android:text="Bagikan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_container"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/textSecondary"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextExtraSmall_Bold"
                    android:textSize="10dp"
                    android:text="Detail"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_focus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/btn_circle"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:src="@drawable/ic_crosshair"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_container"
        app:tint="@color/textSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>
